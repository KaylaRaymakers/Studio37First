}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Followings</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FollowersNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FollowersNavigation.UserId)
        </dd class>
